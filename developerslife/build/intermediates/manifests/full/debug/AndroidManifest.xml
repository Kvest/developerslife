<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kvest.developerslife"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="0.03" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.kvest.developerslife.application.DevlifeApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/com.kvest.developerslife.AppTheme" >
        <activity
            android:name="com.kvest.developerslife.ui.activity.PostsListsActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kvest.developerslife.ui.activity.PostDetailsActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.kvest.developerslife.contentprovider.DevlifeProvider"
            android:authorities="com.kvest.developerslife.contentprovider.DevlifeProvider"
            android:exported="false" />
    </application>

</manifest>